{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "galleries_csukvmssimage_name": {
            "defaultValue": "csukvmssimage",
            "type": "String"
        },
        "snapshots_csuk_api_image_externalid": {
            "defaultValue": "/subscriptions/6c93e868-e85e-45c5-9a6c-ea366a538529/resourceGroups/RG-TEAM-5-SEP-CASE-WE/providers/Microsoft.Compute/snapshots/csuk-api-image",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/galleries",
            "apiVersion": "2020-09-30",
            "name": "[parameters('galleries_csukvmssimage_name')]",
            "location": "westeurope",
            "properties": {
                "description": "Shared Image Gallery for my organization",
                "identifier": {}
            }
        },
        {
            "type": "Microsoft.Compute/galleries/images",
            "apiVersion": "2020-09-30",
            "name": "[concat(parameters('galleries_csukvmssimage_name'), '/csukapiserver')]",
            "location": "westeurope",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/galleries', parameters('galleries_csukvmssimage_name'))]"
            ],
            "properties": {
                "hyperVGeneration": "V1",
                "osType": "Linux",
                "osState": "Specialized",
                "identifier": {
                    "publisher": "myPublisher",
                    "offer": "myOffer",
                    "sku": "mySKU"
                }
            }
        },
        {
            "type": "Microsoft.Compute/galleries/images/versions",
            "apiVersion": "2020-09-30",
            "name": "[concat(parameters('galleries_csukvmssimage_name'), '/csukapiserver/1.0.0')]",
            "location": "westeurope",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/galleries/images', parameters('galleries_csukvmssimage_name'), 'csukapiserver')]",
                "[resourceId('Microsoft.Compute/galleries', parameters('galleries_csukvmssimage_name'))]"
            ],
            "properties": {
                "publishingProfile": {
                    "targetRegions": [
                        {
                            "name": "West Europe",
                            "regionalReplicaCount": 1,
                            "storageAccountType": "Standard_ZRS"
                        }
                    ],
                    "replicaCount": 1,
                    "excludeFromLatest": false,
                    "storageAccountType": "Standard_LRS"
                },
                "storageProfile": {
                    "osDiskImage": {
                        "hostCaching": "None",
                        "source": {
                            "id": "[parameters('snapshots_csuk_api_image_externalid')]"
                        }
                    }
                }
            }
        }
    ]
}